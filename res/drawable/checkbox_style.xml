<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <layer-list>
            <item android:height="@dimen/checkboxSize" android:width="@dimen/checkboxSize" android:drawable="@drawable/edit_text_background" />
        </layer-list>
    </item>
    <item android:state_checked="true">
        <layer-list>
            <item android:gravity="center" android:height="@dimen/text_size_20dp" android:width="@dimen/text_size_20dp" android:drawable="@drawable/ic_red_tick_svg" />
            <item android:height="@dimen/checkboxSize" android:width="@dimen/checkboxSize" android:drawable="@drawable/edit_text_background" />
        </layer-list>
    </item>
</selector>